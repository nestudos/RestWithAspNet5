networks:
  udemy-network:
    driver: bridge
services:
  db:
    build:
      context: C:\Cursos\AspNetCore\RestWithAspNet5\18_RestWithAspNet5_Docker_Suport\RestWithAspNet5
      dockerfile: db/Dockerfile
    command: mysqld --default-authentication-plugin=mysql_native_password
    environment:
      MYSQL_DATABASE: rest_with_asp_net
      MYSQL_PASSWORD: docker
      MYSQL_ROOT_PASSWORD: docker
      MYSQL_USER: docker
      TZ: America/Sao_Paulo
    image: rest-with-asp-net-5-db
    networks:
      udemy-network: null
    ports:
    - published: 3308
      target: 3306
    restart: always
  rest-with-asp-net-5:
    build:
      context: C:\Cursos\AspNetCore\RestWithAspNet5\18_RestWithAspNet5_Docker_Suport\RestWithAspNet5
      dockerfile: RestWithAspNet5/Dockerfile
    depends_on:
      db:
        condition: service_started
    environment:
      ASPNETCORE_ENVIRONMENT: Production
      TZ: America/Sao_Paulo
    image: rest-with-asp-net-5
    networks:
      udemy-network: null
    ports:
    - published: 44350
      target: 80
version: '3.4'